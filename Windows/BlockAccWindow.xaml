<Window x:Class="GameShopProg.BlockAccWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameShopProg"
        mc:Ignorable="d"
        Title="BlockAccWindow" Height="300" Width="300"
        MinHeight="300"
        MinWidth="300"
        MaxHeight="400"
        MaxWidth="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Заблокировать доступ к аккаунту" FontSize="15" Margin="0 10"/>
            <CheckBox Content="На неопределённый срок" x:Name="FullBanCB" Margin="0 5"/>
            <DatePicker x:Name="BlockDate" Margin="0 5"/>
            <StackPanel Orientation="Horizontal">
                <Button Content="Ок" Click="OkClick" Margin="10 0"/>
                <Button Content="Отмена" Click="CancelClick" Margin="10 0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
